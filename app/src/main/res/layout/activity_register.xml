<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_blue_gradient"
    tools:context=".Register">

    <!-- Smaller Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/header_gradient"
        android:paddingTop="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/bp"
            app:civ_border_width="2dp"
            app:civ_border_color="@android:color/white"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Path"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:textSize="14sp"
            android:textColor="#E0E0E0"
            android:layout_marginTop="4dp"/>

    </LinearLayout>

    <!-- Larger Register Form Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="-10dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="28dp"
            android:gravity="center_vertical">

            <!-- Full Name Field -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textColor="#4285F4"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:id="@+id/fullname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_blue_border"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:hint="Enter your full name"
                android:textColorHint="#999999"
                android:inputType="textPersonName"
                android:textColor="#333333"
                android:textSize="16sp" />

            <!-- Username Field -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="#4285F4"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_blue_border"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:hint="Choose a username"
                android:textColorHint="#999999"
                android:inputType="text"
                android:textColor="#333333"
                android:textSize="16sp" />

            <!-- Email Field -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="#4285F4"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_blue_border"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:hint="Enter your email"
                android:textColorHint="#999999"
                android:inputType="textEmailAddress"
                android:textColor="#333333"
                android:textSize="16sp" />

            <!-- Password Field -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="#4285F4"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/edittext_blue_border"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:hint="Create a password"
                android:textColorHint="#999999"
                android:inputType="textPassword"
                android:textColor="#333333"
                android:textSize="16sp" />

            <!-- Register Button -->
            <Button
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:text="REGISTER"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_blue_gradient"
                android:textColor="@android:color/white"
                android:layout_marginBottom="20dp" />

            <!-- Login Section - EXACTLY like login page -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an account?"
                    android:textColor="#666666"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/go_to_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" LOGIN NOW"
                    android:textColor="#4285F4"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="12dp"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>